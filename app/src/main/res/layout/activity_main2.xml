<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.crypticsocket.hoggersvendor.Main2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="36sp"
            android:text="My Menu"
            android:gravity="center"
            android:layout_marginBottom="100dp"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/editItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="editFood"
            android:text="Add food items"
            android:background="@color/colorAccent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            style="@style/Widget.AppCompat.Button.Colored"/>

        <Button
            android:id="@+id/deleteItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="deleteFood"
            android:text="Delete food items"
            android:background="@color/colorAccent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            style="@style/Widget.AppCompat.Button.Colored"/>

        <Button
            android:id="@+id/openOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="openOrders"
            android:text="View open orders"
            android:layout_marginTop="10dp"
            android:background="@color/colorAccent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            style="@style/Widget.AppCompat.Button.Colored"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
